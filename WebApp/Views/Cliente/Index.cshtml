@using Dominio

@model List<Cliente>

<h2>Clientes</h2>

@if(Model.Count == 0)
{
    <div class="alert alert-danger">
        No hay clientes ingresados en el sistema
    </div>
}
else
{
    <table class="table">
        <thead class="table-light">
            <tr>
                <th scope="col">Nombre</th>
                <th scope="col">Correo</th>
                <th scope="col">Documento</th>
                <th scope="col">Nacionalidad</th>
                <th scope="col">Puntos</th>
                <th scope="col">Elegible</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Cliente cliente in Model)
            {
                <tr>
                    <td>@cliente.Nombre</td>
                    <td>@cliente.Correo</td>
                    <td>@cliente.Documento</td>
                    <td>@cliente.Nacionalidad</td>

                    @if(cliente is Premium premium)
                    {
                        <td>@premium.Puntos</td>
                        <td>-</td>
                    } else if (cliente is Ocasional ocasional)
                    {
                        <td>-</td>
                        <td>@ocasional.Elegible</td>
                    }
                </tr>
            }
        </tbody>
    </table>
}


