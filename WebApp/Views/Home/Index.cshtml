<h1>Inicio de sesión</h1>

@if (!string.IsNullOrWhiteSpace(ViewBag.Mensaje))
{
    <div class="alert alert-danger">
        @ViewBag.Mensaje
    </div>
}
<form method="post">
    <div class="form-group">
        <label for="correo">Introduzca su correo</label>
        <input type="email" name="correo" class="form-control" id="correo">
    </div>
    <div class="form-group">
        <label for="contra">Introduzca su contraseña</label>
        <input type="password" name="contra" class="form-control" id="contra">
    </div>
    <br/>
    <button type="submit" class="btn btn-primary">Iniciar Sesión</button>
</form>
<br/>
<a href="~/Cliente/Add"><input type="button" class="btn btn-primary" value="Ir a Registrarse" /></a>
